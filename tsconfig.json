{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2022",
    "outDir": "./dist",
    "removeComments": true,
    "strict": true,
    "esModuleInterop": true,
    "noImplicitReturns": true,
    "forceConsistentCasingInFileNames": true,
    "keyofStringsOnly": true,
    "exactOptionalPropertyTypes": true
  },
  "exclude": ["node_modules", "dist"]
}
